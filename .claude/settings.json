{
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "npm test",
      "Bash(npm test:*)",
      "Bash(git commit:*)",
      "Bash(git commit -m '*')",
      "Bash(scripts/commit.sh:*)",
      "Bash(scripts/gcm.sh:*)",
      "Bash(echo:*)",
      "Bash(echo * > .claude-task)",
      "Bash(printf:*)",
      "Write(.claude-task)",
      "Read(.claude-task)",
      "Bash(scripts/set_slt.sh:*)"
    ],
    "deny": [
      "Bash(git add -A)",
      "Bash(git add .)"
    ]
  }
}