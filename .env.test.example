# Test Database Configuration
# Copy this to .env.test and configure with your test database

# Test Database - Should be a separate database from development/production
DATABASE_URL="postgresql://username:password@host/maix_test?sslmode=require"

# NextAuth.js for testing
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="test-secret-only-for-testing"

# Test configuration flags
NODE_ENV="test"
IS_TEST_ENV="true"

# Disable external services in tests
DISABLE_EMAIL="true"
DISABLE_EXTERNAL_APIS="true"

# Mock API keys for testing (not real keys)
ANTHROPIC_API_KEY="test-anthropic-key"
GEMINI_API_KEY="test-gemini-key"
RESEND_API_KEY="test-resend-key"

# Test encryption key (consistent for test reproducibility)
ENCRYPTION_KEY="test-encryption-key-32-characters!!"